@import "sanitize"
@import "helpers"
@import "fonts"

$cols = 6
$col = 90px
$gutter = 84px

.container
  margin: 0 auto
  width: ($col * $cols)+($gutter * $cols)
.row
  clear: both
.col
  float: left
  margin-left: ($gutter/2)
  margin-right: ($gutter/2)
  box-sizing: content-box
for col in 1..$cols
  .col{col}
    width: ( col * $col ) + ( ( col - 1 ) * $gutter )

.grid-sizer
  width: $col + $gutter

.gutter-sizer
  width: $gutter


// VARIABLES

$margin-small = ($gutter)
$margin-basic = ($gutter*2)
$margin-large = ($gutter*5)
$margin-mega = ($gutter*8)

$font-size-basic = 15px
$font-leading-basic = 1.35em
$font-tracking-basic = 0.001em

$color-black-soft = rgb(14,14,14)
$color-white-soft = rgb(253,253,253)

$color-blue = #0000FF


// TYPOGRAPHY

$font-nord = 'SchulbuchNord'
$font-sued = 'SchulbuchSued'

body
  font-family: $font-nord, helvetica, arial, sans-serif
  font-size: $font-size-basic
  line-height: $font-leading-basic
  letter-spacing: $font-tracking-basic

h1
  font-size: 3em

h2
  font-size: 1em
  font-weight: normal
  display: block
  text-align: center
  margin: 3em 0
  span
    border-bottom: 1px solid $color-white-soft

h3
  font-size: 1.5em

p
  margin-bottom: 1em

li
  list-style: none


// LINKS

a,a:active,a:visited
  color:inherit
  text-decoration: none
  border-bottom: 1px solid $color-white-soft


// BASIC

html
  background-color: $color-blue
  color: $color-white-soft

img
  max-width: 100%
  height: auto


// STRUCTURE

#main-content
  margin-top: $margin-large


// SPLASH

#splash
  width: 100%
  height: 100%
  top: 0
  left: 0
  position: fixed
  z-index: 999

#splash-arpa, #splash-noon
  width: 50%
  height: 100%
  top: 0
  position: absolute
  cursor: pointer
  svg
    height: 80px

#splash-arpa
  left: 0
  background-color: $color-blue
  svg
    path
      fill: $color-white-soft
  &:hover
    background-color: $color-white-soft
    svg
      path
        fill: $color-blue

#splash-noon
  left: 50%
  background-color: $color-blue
  background-size: cover
  background-position: center center
  svg
    path
      fill: $color-white-soft
  &:hover
    background-image: none !important
    background-color: $color-white-soft
    svg
      path
        fill: $color-black-soft


// HEADER

.nav
  position: fixed
  text-transform: uppercase
  font-size: .9em
  z-index: 999
  a
    border: 0
    padding: 1px

#nav-top-left
  top: 2%
  left: 2%

#nav-top-right
  top: 2%
  right: 2%

#nav-bottom-right
  bottom: 2%
  right: 2%

#nav-bottom-left
  bottom: 2%
  left: 2%

.back
  display: none

body.page
  .back
    display: block


// HOME

#home
  p, li
    font-size: 1.7em
    text-align: center
    line-height: $font-leading-basic
  ul
    column-count: 2
    column-gap: $gutter
    li
      a
        border-bottom: none


// NEWS

#news
  display: none
  padding: $margin-small 0

.tweet
  text-align: center
  margin-bottom: 3em

.tweet-meta
  margin-bottom: .7em
  font-size: .8em
  a
    border-bottom: 0
    padding: 0

.tweet-img
  margin-top: 1em

#follow-us
  text-align: center
  font-size: 2em


// FOOTER

#footer
  width: 100%


// MEDIA QUERIES

@media screen and (max-width: ($col * $cols)+($gutter * $cols))
  html
    width: 100%
