@import "sanitize"
@import "helpers"
@import "fonts"

$cols = 6
$col = 90px
$gutter = 84px

.container
  margin: 0 auto
  width: ($col * $cols)+($gutter * $cols)
.row
  clear: both
.col
  float: left
  margin-left: ($gutter/2)
  margin-right: ($gutter/2)
  box-sizing: content-box
for col in 1..$cols
  .col{col}
    width: ( col * $col ) + ( ( col - 1 ) * $gutter )

.grid-sizer
  width: $col + $gutter

.gutter-sizer
  width: $gutter


// VARIABLES

$margin-small = ($gutter)
$margin-basic = ($gutter*2)
$margin-large = ($gutter*5)
$margin-mega = ($gutter*8)
$margin-tiny = ($gutter/2)

$font-size-basic = 15px
$font-leading-basic = 1.35em
$font-tracking-basic = 0.001em

$color-black-soft = rgb(14,14,14)
$color-white-soft = rgb(253,253,253)

$color-blue = #0000FF


// TYPOGRAPHY

$font-nord = 'SchulbuchNord'

body
  font-family: $font-nord, helvetica, arial, sans-serif
  -webkit-font-smoothing: antialiased
  font-size: $font-size-basic
  line-height: $font-leading-basic
  letter-spacing: $font-tracking-basic

h1
  font-size: 3em

h2
  font-size: 1em
  font-weight: normal
  display: block
  text-align: center
  margin: $margin-tiny 0
  span
    border-bottom: 1px solid $color-white-soft

h3
  font-size: 1.5em

p
  margin-bottom: 1em

li
  list-style: none


// LINKS

a,a:active,a:visited
  color:inherit
  text-decoration: none
  border-bottom: 1px solid $color-white-soft


// BASIC

html
  background-color: $color-blue
  color: $color-white-soft

img
  max-width: 100%
  height: auto


// STRUCTURE

#main-content
  display: none
  margin-top: $margin-large


// SPLASH

#splash
  width: 100%
  height: 100%
  top: 0
  left: 0
  position: fixed
  z-index: 999

#splash-arpa, #splash-noon
  width: 50%
  height: 100%
  top: 0
  position: absolute
  cursor: pointer
  svg
    height: 80px
    max-width: 90%

#splash-arpa
  left: 0
  background-color: $color-blue
  svg
    path
      fill: $color-white-soft
  &:hover
    background-color: $color-white-soft
    svg
      path
        fill: $color-blue

#splash-noon
  left: 50%
  background-color: $color-blue
  background-size: cover
  background-position: center center
  svg
    path
      fill: $color-white-soft
  &:hover
    background-image: none !important
    background-color: $color-white-soft
    svg
      path
        fill: $color-black-soft


// HEADER

.nav
  position: fixed
  text-transform: uppercase
  font-size: .9em
  z-index: 999
  a
    border: 0
    padding: 1px

#nav-top-left
  top: 2%
  left: 2%

#nav-top-right
  top: 2%
  right: 2%

#nav-bottom-right
  bottom: 2%
  right: 2%

#nav-bottom-left
  bottom: 2%
  left: 2%
  padding-bottom: 1em

.back-arrow
  font-size: 2em
  transform: rotate(-45deg)
  display: block


// HOME

#home-container
  height: 100%

#home
  p, li
    font-size: 1.7em
    text-align: center
    line-height: $font-leading-basic

#clients
  column-count: 2
  column-gap: $margin-small
  margin-bottom: $margin-tiny
  li
    a
      border-bottom: none


// NEWS

#news
  display: none
  padding: $margin-small 0

.tweet
  text-align: center
  margin-bottom: 3em

.tweet-meta
  margin-bottom: .7em
  font-size: .8em
  a
    border-bottom: 0
    padding: 0

.tweet-img
  margin-top: 1em

#follow-us
  text-align: center
  font-size: 2em


// MEDIA QUERIES

  // RATIO QUERIY FOR SPLASH

@media screen and (max-aspect-ratio: 1/1)

  #splash-arpa, #splash-noon
    width: 100%
    height: 50%
    left: 0
    top: 0
    svg
      max-width: 60%

  #splash-noon
    top: 50%


  // NORMA QUERIES

@media screen and (max-width: ($col * $cols)+($gutter * $cols))

  // LAYOUT
  $col = 80px
  $gutter = 56px
  $margin-small = ($gutter)
  $margin-basic = ($gutter*2)
  $margin-large = ($gutter*5)
  $margin-mega = ($gutter*8)
  $margin-tiny = ($gutter/2)

  .container
    width: ($col * $cols)+($gutter * $cols)
  .col
    margin-left: ($gutter/2)
    margin-right: ($gutter/2)
  for col in 1..$cols
    .col{col}
      width: ( col * $col ) + ( ( col - 1 ) * $gutter )

  .grid-sizer
    width: $col + $gutter

  .gutter-sizer
    width: $gutter

  h2
    margin: $margin-tiny 0

  #main-content
    margin-top: $margin-large

  #clients
    column-gap: $margin-small
    margin-bottom: $margin-tiny

  #news
    padding: $margin-small 0

  // TYPE

  $font-size-basic = 14px
  $font-leading-basic = 1.35em

  body
    font-size: $font-size-basic
    line-height: $font-leading-basic

@media screen and (max-width: 816px)

  // LAYOUT
  $col = 60px
  $gutter = 40px
  $margin-small = ($gutter)
  $margin-basic = ($gutter*2)
  $margin-large = ($gutter*5)
  $margin-mega = ($gutter*8)
  $margin-tiny = ($gutter/2)

  .container
    width: ($col * $cols)+($gutter * $cols)
  .col
    margin-left: ($gutter/2)
    margin-right: ($gutter/2)
  for col in 1..$cols
    .col{col}
      width: ( col * $col ) + ( ( col - 1 ) * $gutter )

  .grid-sizer
    width: $col + $gutter

  .gutter-sizer
    width: $gutter

  h2
    margin: $margin-tiny 0

  #main-content
    margin-top: $margin-large

  #clients
    column-gap: $margin-small
    margin-bottom: $margin-tiny

  #news
    padding: $margin-small 0

  // TYPE

  $font-size-basic = 13px
  $font-leading-basic = 1.35em

  body
    font-size: $font-size-basic
    line-height: $font-leading-basic

@media screen and (max-width: 600px)

  // LAYOUT
  $col = 25px
  $gutter = 25px
  $margin-small = ($gutter)
  $margin-basic = ($gutter*2)
  $margin-large = ($gutter*5)
  $margin-mega = ($gutter*8)
  $margin-tiny = ($gutter/2)

  .container
    width: ($col * $cols)+($gutter * $cols)
  .col
    margin-left: ($gutter/2)
    margin-right: ($gutter/2)
  for col in 1..$cols
    .col{col}
      width: ( col * $col ) + ( ( col - 1 ) * $gutter )

  .grid-sizer
    width: $col + $gutter

  .gutter-sizer
    width: $gutter

  h2
    margin: $margin-tiny 0

  #main-content
    margin-top: $margin-large

  #clients
    column-gap: $margin-small
    margin-bottom: $margin-tiny

  #news
    padding: $margin-small 0

  // LAYOUT FIXES

  #news
    .col3
      width: 100%
      margin-left: 0
      margin-right: 0
      float: none

  // TYPE

  $font-size-basic = 10px
  $font-leading-basic = 1.35em

  body
    -webkit-font-smoothing: subpixel-antialiased
    font-size: $font-size-basic
    line-height: $font-leading-basic