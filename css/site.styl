@import "sanitize"
@import "helpers"
@import "fonts"

$cols = 10
$col = 76px
$gutter = 60px

  // FIXED

.container
  margin: 0 auto
  width: ($col * $cols)+($gutter * $cols)
.row
  clear: both
.col
  float: left
  margin-left: ($gutter/2)
  margin-right: ($gutter/2)
  box-sizing: content-box
for col in 1..$cols
  .col{col}
    width: ( col * $col ) + ( ( col - 1 ) * $gutter )

    // FLUID

.percent-col
  float: left
  box-sizing: border-box
$pcols = 10
for pcol in 1..$pcols
  .into-{pcol}
    width: ( 100% / pcol )

// VARIABLES

$margin-small = ($gutter)
$margin-basic = ($gutter*2)
$margin-large = ($gutter*5)
$margin-mega = ($gutter*8)
$margin-tiny = ($gutter/2)

$font-size-large = 26px
$font-size-sub-heading = 17px
$font-size-basic = 13px
$font-size-small = 12px

$font-leading-basic = 1.35em

$font-tracking-basic = 0.001em
$font-tracking-large = 0.07em

$color-black-soft = rgb(14,14,14)
$color-white-soft = rgb(253,253,253)

$color-blue = #0000FF


// TYPOGRAPHY

$font-reg = 'arpa_schulbuchroman_web', helvetica, arial, sans-serif
$font-bold = 'arpa_schulbuchbold_web', helvetica, arial, sans-serif

body
  -webkit-font-smoothing: antialiased
  font-family: $font-reg
  font-size: $font-size-basic
  line-height: $font-leading-basic
  letter-spacing: $font-tracking-basic

.font-large
  font-size: $font-size-large
  line-height: $font-leading-basic

.font-small
  font-size: $font-size-small
  line-height: $font-leading-basic

h1
  font-size: 3em

h2
  font-size: $font-size-sub-heading
  line-height: $font-leading-basic
  font-weight: normal
  display: block
  text-align: center
  margin: $margin-tiny 0
  span
    border-bottom: 1px solid $color-white-soft

h3
  font-size: 1.5em

p
  margin-bottom: 1em

li
  list-style: none

strong, b, .font-bold
  font-family: $font-bold


// LINKS

a,a:active,a:visited
  color:inherit
  text-decoration: none
  border-bottom: 1px solid $color-white-soft


// BASIC

html
  background-color: $color-blue
  color: $color-white-soft

img
  max-width: 100%
  height: auto


// STRUCTURE

#main-content
  display: none
  margin-top: $margin-large


// SPLASH

#splash
  width: 100%
  height: 100%
  background-color: white
  top: 0
  left: 0
  position: fixed
  z-index: 999

#splash-arpa, #splash-noon
  width: 50.5%
  height: 100%
  top: 0
  position: absolute
  cursor: pointer
  svg
    height: 80px
    max-width: 90%

#splash-arpa
  left: 0
  background-color: $color-blue
  svg
    path
      fill: $color-white-soft
  &:hover
    background-color: $color-white-soft
    svg
      path
        fill: $color-blue

#splash-noon
  left: 50%
  background-color: $color-blue
  background-size: cover
  background-position: center center
  svg
    path
      fill: $color-white-soft
  &:hover
    background-image: none !important
    background-color: $color-white-soft
    svg
      path
        fill: $color-black-soft
    #noon-video-container
      display: none

#noon-z-index-fix
  position: relative
  width: 100%
  height: 100%
  z-index: 999

#noon-video-container
  position: absolute
  top: 0
  left: 0
  right: 0
  bottom: 0
  overflow: hidden

#noon-video
  height: 100%


// HEADER

.nav
  position: fixed
  text-transform: uppercase
  font-family: $font-bold
  letter-spacing: $font-tracking-large = 0.07em
  z-index: 999
  a
    border: 0
    padding: 1px

#nav-top-left
  top: 2%
  left: 2%

#nav-top-right
  top: 2%
  right: 2%

#nav-bottom-right
  bottom: 2%
  right: 2%

#nav-bottom-left
  bottom: 2%
  left: 2%
  padding-bottom: 1em

.back-arrow
  font-size: 2em
  transform: rotate(-45deg)
  display: block


// HOME

#home-container
  min-height: 100%

#home-text
  max-width: 900px
  margin: 0 auto 1em

#clients
  column-count: 2
  column-gap: $margin-small
  margin-bottom: $margin-tiny
  li
    a
      border-bottom: none


// NEWS

#news
  display: none
  padding: $margin-small 0
  letter-spacing: $font-tracking-large
  width: 92%
  max-width: 2980px
  margin: 0 auto

.tweet
  text-align: center
  padding: 0 1em
  margin-bottom: 3em

.tweet-meta
  margin-bottom: .3em
  a
    border-bottom: 0
    padding: 0

.tweet-img
  margin: 1em auto 0
  display: block

#follow-us
  text-align: center
  font-size: 2em
  display: block
  width: 100%


// MEDIA QUERIES

  // RATIO QUERIY FOR SPLASH

@media screen and (max-aspect-ratio: 1/1)

  #splash-arpa, #splash-noon
    width: 100%
    height: 50.5%
    left: 0
    top: 0
    svg
      max-width: 60%

  #splash-noon
    top: 50%


  // NORMAL QUERIES

@media screen and (max-width: ($col * $cols)+($gutter * $cols))

  // LAYOUT

  $col = 65px
  $gutter = 50px
  $margin-small = ($gutter)
  $margin-basic = ($gutter*2)
  $margin-large = ($gutter*5)
  $margin-mega = ($gutter*8)
  $margin-tiny = ($gutter/2)

  .container
    width: ($col * $cols)+($gutter * $cols)
  .col
    margin-left: ($gutter/2)
    margin-right: ($gutter/2)
  for col in 1..$cols
    .col{col}
      width: ( col * $col ) + ( ( col - 1 ) * $gutter )

  .grid-sizer
    width: $col + $gutter

  .gutter-sizer
    width: $gutter

  h2
    margin: $margin-tiny 0

  #main-content
    margin-top: $margin-large

  #clients
    column-gap: $margin-small
    margin-bottom: $margin-tiny


  // NEWS

  #news
    padding: $margin-small 0


@media screen and (max-width: 1150px)

  // LAYOUT

  $col = 51px
  $gutter = 34px
  $margin-small = ($gutter)
  $margin-basic = ($gutter*2)
  $margin-large = ($gutter*5)
  $margin-mega = ($gutter*8)
  $margin-tiny = ($gutter/2)

  .container
    width: ($col * $cols)+($gutter * $cols)
  .col
    margin-left: ($gutter/2)
    margin-right: ($gutter/2)
  for col in 1..$cols
    .col{col}
      width: ( col * $col ) + ( ( col - 1 ) * $gutter )

  .grid-sizer
    width: $col + $gutter

  .gutter-sizer
    width: $gutter

  h2
    margin: $margin-tiny 0

  #main-content
    margin-top: $margin-large

  #clients
    column-gap: $margin-small
    margin-bottom: $margin-tiny


  // NEWS

  #news
    padding: $margin-small 0

  .tweet
    width: ( 100% / 3 )


@media screen and (max-width: 850px)

  // LAYOUT

  $col = 33px
  $gutter = 30px
  $margin-small = ($gutter)
  $margin-basic = ($gutter*2)
  $margin-large = ($gutter*5)
  $margin-mega = ($gutter*8)
  $margin-tiny = ($gutter/2)

  .container
    width: ($col * $cols)+($gutter * $cols)
  .col
    margin-left: ($gutter/2)
    margin-right: ($gutter/2)
  for col in 1..$cols
    .col{col}
      width: ( col * $col ) + ( ( col - 1 ) * $gutter )

  .grid-sizer
    width: $col + $gutter

  .gutter-sizer
    width: $gutter

  h2
    margin: $margin-tiny 0

  #main-content
    margin-top: $margin-large

  #clients
    column-gap: $margin-small
    margin-bottom: $margin-tiny


  // NEWS

  #news
    padding: $margin-basic 0

  .tweet
    width: ( 100% / 2 )


  // TYPE

  $font-size-large = 20px
  $font-size-sub-heading = 15px
  $font-size-basic = 11px
  $font-size-small = 10px

  body
    font-size: $font-size-basic
    line-height: $font-leading-basic

  .font-large
    font-size: $font-size-large
    line-height: $font-leading-basic

  .font-small
    font-size: $font-size-small
    line-height: $font-leading-basic

  h2
    font-size: $font-size-sub-heading
    line-height: $font-leading-basic

@media screen and (max-width: 630px)

  // LAYOUT

  $col = 19px
  $gutter = 10px
  $margin-small = ($gutter)
  $margin-basic = ($gutter*2)
  $margin-large = ($gutter*5)
  $margin-mega = ($gutter*8)
  $margin-tiny = ($gutter/2)

  .container
    width: ($col * $cols)+($gutter * $cols)
  .col
    margin-left: ($gutter/2)
    margin-right: ($gutter/2)
  for col in 1..$cols
    .col{col}
      width: ( col * $col ) + ( ( col - 1 ) * $gutter )

  .grid-sizer
    width: $col + $gutter

  .gutter-sizer
    width: $gutter

  h2
    margin: $margin-basic 0

  #main-content
    margin-top: $margin-large

  #home-container
    padding-top: $margin-tiny

  #clients
    column-gap: $margin-small
    margin-bottom: $margin-tiny

  #news
    padding: $margin-mega 0

  .tweet
    width: ( 100% / 1 )

  // TYPE

  $font-size-large = 15px
  $font-size-sub-heading = 12px
  $font-size-basic = 10px
  $font-size-small = 9px

  body
    font-size: $font-size-basic
    line-height: $font-leading-basic

  .font-large
    font-size: $font-size-large
    line-height: $font-leading-basic

  .font-small
    font-size: $font-size-small
    line-height: $font-leading-basic

  h2
    font-size: $font-size-sub-heading
    line-height: $font-leading-basic